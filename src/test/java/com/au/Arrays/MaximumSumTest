package com.au.Loops;

import org.junit.jupiter.api.Test;
import static com.au.lebrese.kata2.GreatestSum.*;

import static org.junit.jupiter.api.Assertions.*;


class MaximumSumTest {

    @Test
    public void shouldReturn45Given12345() {
        //Given
        int[] inputArray = {1,2,3,4,5};
        int[] expectedOutput = {4,5};

        //When
        int[] actualOutput = findGreatestSum(inputArray);

        //Then
        assertArrayEquals(expectedOutput, actualOutput);
    }

    @Test
    public void shouldReturn99Given32736156699() {
        //Given
        int[] inputArray = {3,2,7,3,6,1,5,6,6,9,9};
        int[] expectedOutput = {9,9};

        //When
        int[] actualOutput = findGreatestSum(inputArray);

        //Then
        assertArrayEquals(expectedOutput, actualOutput);
    }

    @Test
    public void shouldReturn24GivenMinus12Minus34Minus5() {
        //Given
        int[] inputArray = {-1,2,-3,4,-5};
        int[] expectedOutput = {2,4};

        //When
        int[] actualOutput = findGreatestSum(inputArray);

        //Then
        assertArrayEquals(expectedOutput, actualOutput);
    }
}
