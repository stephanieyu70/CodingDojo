package com.au.Loops

import org.junit.jupiter.api.Test;

import static com.au.lebrese.kata2.MissingNumber.*;
import static org.junit.jupiter.api.Assertions.*;

/**
 * Created by u336571 on 25/10/2017.
 */
class MissingNumberTest {

    @Test
    public void shouldReturn4ForGiven1235Array() {
        //Given
        int[] inputArray = {1,2,3,5};
        int expectedOutput = 4;

        //When
        int actualOutput = findMissingNumber(inputArray);

        //Then
        assertEquals(expectedOutput, actualOutput);
    }

    @Test
    public void shouldReturn55ForGiven1235Array() {
        //Given
        int[] inputArray = {49,50,51,52,53,54,56};
        int expectedOutput = 55;

        //When
        int actualOutput = findMissingNumber(inputArray);

        //Then
        assertEquals(expectedOutput, actualOutput);
    }

    @Test
    public void shouldReturn12ForGiven78910111314Array() {
        //Given
        int[] inputArray = {7,8,9,10,11,13,14};
        int expectedOutput = 12;

        //When
        int actualOutput = findMissingNumber(inputArray);

        //Then
        assertEquals(expectedOutput, actualOutput);
    }

    @Test
    public void shouldReturn0ForGiven1234Array() {
        //Given
        int[] inputArray = {1,2,3,4};
        int expectedOutput = 0;

        //When
        int actualOutput = findMissingNumber(inputArray);

        //Then
        assertEquals(expectedOutput, actualOutput);
    }

}
