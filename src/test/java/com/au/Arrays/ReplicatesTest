package com.au.Arrays;

import org.junit.jupiter.api.Test;
import static com.au.lebrese.kata2.Duplicates.*;

import static org.junit.jupiter.api.Assertions.*;


class ReplicatesTest {

    @Test
    public void shouldReturn2GivenArrayOf22133345() {
        //Given
        int[] inputArray = {2,2,1,3,3,3,4,5};
        int[] expectedArray = {3};

        //When
        int[] actualArray = getDuplicates(inputArray);
        printArray(actualArray);

        //Then
        assertArrayEquals(expectedArray, actualArray);

    }


    @Test
    public void shouldReturn23GivenArrayOf221345() {
        //Given
        int[] inputArray = {2,2,2,1,3,3,3,4,5};
        int[] expectedArray = {2,3};

        //When
        int[] actualArray = getDuplicates(inputArray);
        printArray(actualArray);

        //Then
        assertArrayEquals(expectedArray, actualArray);

    }

    @Test
    public void shouldReturn12GivenArrayOf12() {
        //Given
        int[] inputArray = {1,2};
        int[] expectedArray = {1,2};

        //When
        int[] actualArray = getDuplicates(inputArray);
        printArray(actualArray);

        //Then
        assertArrayEquals(expectedArray, actualArray);

    }

    public void printArray(int[] inputArray) {
        for(int i= 0; i < inputArray.length; i++) {
            System.out.print(inputArray[i]);
        }
    }

}
