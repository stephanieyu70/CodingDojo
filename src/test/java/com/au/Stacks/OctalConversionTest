package com.au.OctalConversionTest;

import org.junit.jupiter.api.Test;

import static com.au.lebrese.kata3.OctalConversion.*;
import static org.junit.jupiter.api.Assertions.*;

class OctalConversionTest {

    @Test
    public void shouldReturn1731Given985() {
        //Given
        int inputNumber = 985;
        int expectedOutputNumber = 1731;

        //When
        int actualOutputNumber = convertToOctal(inputNumber);

        //Then
        assertEquals(expectedOutputNumber, actualOutputNumber);
    }

    @Test
    public void shouldReturn10Given8() {
        //Given
        int inputNumber = 8;
        int expectedOutputNumber = 10;

        //When
        int actualOutputNumber = convertToOctal(inputNumber);

        //Then
        assertEquals(expectedOutputNumber, actualOutputNumber);
    }

    @Test
    public void shouldReturn1Given1() {
        //Given
        int inputNumber = 1;
        int expectedOutputNumber = 1;

        //When
        int actualOutputNumber = convertToOctal(inputNumber);

        //Then
        assertEquals(expectedOutputNumber, actualOutputNumber);
    }

    @Test
    public void shouldReturn7Given7() {
        //Given
        int inputNumber = 7;
        int expectedOutputNumber = 7;

        //When
        int actualOutputNumber = convertToOctal(inputNumber);

        //Then
        assertEquals(expectedOutputNumber, actualOutputNumber);
    }

    @Test
    public void shouldReturn7Given1337() {
        //Given
        int inputNumber = 1337;
        int expectedOutputNumber = 2471;

        //When
        int actualOutputNumber = convertToOctal(inputNumber);

        //Then
        assertEquals(expectedOutputNumber, actualOutputNumber);
    }
}
