package com.au.Arrays;

public class MaximumSum {

    public static int[] findGreatestSum(int[] inputArray) {

        int[] outputArray = {0,0};
        List<Integer> inputArrayList = Arrays.stream(inputArray).boxed().collect(Collectors.toList());

        if (inputArrayList.size() < 2) {
            return outputArray;
        }

        Integer firstLargest = inputArrayList.get(0);
        Integer secondLargest = inputArrayList.get(1);

        for (int i = 0; i < inputArrayList.size(); i++) {
            if (inputArrayList.get(i) > firstLargest) {
                firstLargest = inputArrayList.get(i);
                inputArrayList.remove(i);
            }

        }

        return outputArray;
    }
}
